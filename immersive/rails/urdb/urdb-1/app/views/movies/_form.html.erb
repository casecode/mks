<%= form_for @movie do |f| %>
	<table width="100%">
	  <tbody>
	    <tr>
	      <td width="20%"><%= f.label :title %></td>
	      <td><%= f.text_field :title %></td>
	    </tr>
	    <tr>
	      <td width="20%"><%= f.label :image %></td>
	      <td><%= f.text_field :image %></td>
	    </tr>
	    <tr>
	      <td width="20%"><%= f.label :trailer %></td>
	      <td><%= f.text_field :trailer %></td>
	    </tr>
	    <tr>
	      <td width="20%"><%= f.label :description %></td>
	      <td><%= f.text_area :description %></td>
	    </tr>
	    <tr>
	      <td><%= f.submit 'Submit', :class => 'button' %></td>
	   	</tr>
	  </tbody>
	</table>
<% end %>


